<!-- html to display all posts -->
<div class="jumbotron jumbotron-fluid">
        <div class="container">
          <h1 class="display-6">What's Going on in the Tech World</h1>  
        </div>
        {{#each posts as |post| }}
        <div class="card">
            <div class="card-header">
                <a href="/post/{{post.id}}">{{post.title}}</a>
                <p>by {{post.user.username}}</p>
            </div>
            <div class="card-body">
             <p>
              {{post.content}}   
             </p> 
            </div>
          </div>
        {{/each}}
        </div>
      </div>
      