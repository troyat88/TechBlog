<!-- html to render all posts related to user, maybe comments made and form for new post-->
<div class="row mt-4">
            <div class="col-md-6">
                <h3>Create a new Post</h3>
                <div class="card">
                    <div class="card-header">
                        <form class="form new-post">
                            <div class="form-group">
                                <label for="textarea"></label>
                                <textarea class="form-control" id="exampleFormControlTextarea1" placeholder="Post Title"
                                    rows="1"></textarea>
                            </div>
                        </form>
                    </div>
                    <div class="card-body">
                        <p>
                        <form class="form new-post">
                            <div class="form-group">
                                <label for="textarea"></label>
                                <textarea class="form-control" id="exampleFormControlTextarea1"
                                    placeholder="What you thinkin'?" rows="5"></textarea>
                                <button class="btn btn-primary" type="submit">Submit</button>
                            </div>
                        </form>
                        </p>
                    </div>
                </div>

            </div>
            <div class="col-md-6">
                <div class="jumbotron jumbotron-fluid">
                    <div class="container">
                      <h1 class="display-6">Your Posts</h1>
                      <div class="card">
                        <div class="card-header">
                            <a href="/project/{{post.id}}">{{post.title}}</a>
                        </div>
                        <div class="card-body">
                         <p>
                          {{post.content}}   
                         </p> 
                        </div>
                      </div>
                    </div>
                  </div> 
            </div>
        </div>